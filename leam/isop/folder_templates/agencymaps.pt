<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="leam.isop">


<metal:slot fill-slot="style_slot">
  <link rel="stylesheet" class="required"
    href="http://cdn.datatables.net/1.10.7/css/jquery.dataTables.min.css">
  <link rel="stylesheet" class="required"
    href="http://openlayers.org/en/v3.4.0/css/ol.css" >
  <link rel="stylesheet" class="required"
    tal:define="navroot context/@@plone_portal_state/navigation_root_url"
    tal:attributes="href string:${navroot}/++resource++leam.isop/isop.css">
</metal:slot>

<metal:slot fill-slot="javascript_head_slot">
  <script type="text/javascript"
    src="http://openlayers.org/en/v3.4.0/build/ol.js">
  </script>
  <script type="text/javascript"
    src="http://cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js">
  </script>
  <script type="text/javascript"
    src="https://cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js">
  </script>
   
  <script>
    jQuery(function($){
      //check all jPList javascript options
      $('#plan-lib').DataTable();
     });
   </script>

</metal:slot>

<body>

  <!-- remove title and description -->
  <metal:slot fill-slot="content-title">
    <metal:content-title define-macro="content-title">
      </metal:content-title>
  </metal:slot>

  <metal:slot fill-slot="content-description">
    <metal:content-description define-macro="content-description">
      </metal:content-description>
  </metal:slot>


  <metal:slot fill-slot="content-core">
    <metal:content-core define-macro="content-core">

      <div id="map" class="map simmap"></div>
      <div id="controlp" class="controlp ol-control">
        <table class="agency-control">
        </table>
      </div>

      <div class="top-margin-20"></div>

      <table id="plan-lib" class="table table-bordered top-margin-30" 
        cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>Partner</th>
            <th>Title</th>
            <th>Plan Type</th>
          </tr>
        </thead>

        <tbody>
          <tr tal:repeat="p view/plans">
            <td tal:content="p/agency">Agency</td>
            <td tal:content="p/title">Title</td>
            <td tal:content="p/plantype">Plan Type</td>
          </tr>
        </tbody>
      </table>
  
      <script type="text/javascript" src="++resource++leam.isop/agencylist.js">
      </script>
  
    </metal:content-core>
  </metal:slot>
  
</body>
</html>

